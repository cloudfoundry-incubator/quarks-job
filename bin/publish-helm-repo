#!/bin/bash

version=$ARTIFACT_VERSION

# https://github.com/helm/helm/issues/7363
helm repo index --merge updated/index.yml helm/

cp -a helm/quarks-job*.tgz updated/
cp  helm/index.yaml updated/

pushd updated
  git add .
  git config --global user.name "CFContainerizationBot"
  git config --global user.email "cfcontainerizationbot@cloudfoundry.org"
  git commit -m "add quarks-job chart: $version"
  git push
popd
